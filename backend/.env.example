# MongoDB Atlas connection string (from mongodb.com/atlas)
MONGO_URI=mongodb+srv://labshare_user:YOUR_PASSWORD_HERE@cluster.xxxxx.mongodb.net/lab_experiment_share?retryWrites=true&w=majority

# JWT Secret — type any long random phrase you make up
JWT_SECRET=my_super_secret_lab_share_key_nobody_can_guess_2024
JWT_EXPIRE=7d

# Cloudinary (from cloudinary.com dashboard)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=123456789012345
CLOUDINARY_API_SECRET=your_api_secret_here

# Gmail App Password (from myaccount.google.com > Security > App Passwords)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=yourgmail@gmail.com
EMAIL_PASS=your16charapppassword

# Server settings — DO NOT CHANGE THESE
PORT=5000
NODE_ENV=production

# Frontend URL — change this after you deploy on Render
CLIENT_URL=http://localhost:3000
